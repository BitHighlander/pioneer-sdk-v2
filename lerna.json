{
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "pioneer-sdk(release): version %v",
      "ignoreChanges": [
        "**/*.md",
        "**/lib/**"
      ]
    }
  },
  "packages": [
    "apps/**/*",
    "modules/**/*",
    "e2e/**/*"
  ],
  "version": "independent",
  "useWorkspaces": true
}
